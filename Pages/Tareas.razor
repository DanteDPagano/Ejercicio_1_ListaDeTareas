@page "/Tareas"

<h1>Tareas pendientes (@tareas.Count(todo => !todo.Finalizada))</h1>
<ul>
    @foreach (var todo in tareas)
    {
        <li>
            <input type="checkbox" @bind="todo.Finalizada"/>
            <input @bind="todo.Titulo"/>            
        </li>
    }
</ul>
<input placeholder="Algo que hacer" @bind="newTarea"/>
<button class="button" @onclick="AddTodo">Agregar Algo</button>
@code {
    private List<TareaItem> tareas = new();
    private string? newTarea;

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTarea))
        {
            tareas.Add(new TareaItem { Titulo = newTarea });
            newTarea = string.Empty;
        }
    }
}